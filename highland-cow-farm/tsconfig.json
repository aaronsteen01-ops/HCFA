{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": false,
    "lib": ["DOM", "ESNext"],
    "types": []
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
